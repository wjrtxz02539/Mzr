@page
@model Mzr.Web.Pages.SearchModel
@{
    ViewBag.Title = "Search";
}

@if (Model.ReplyQuery != null)
{
    <component type="typeof(ReplyPagination)" render-mode=Server param-ContentQuery=@Model.ReplyQuery param-StartTime=@Model.StartTime param-EndTime=@Model.EndTime/>
}
else if (Model.DynamicQuery != null)
{
    <component type="typeof(DynamicPagination)" render-mode="Server" param-DescriptionQuery=@Model.DynamicQuery  param-DisplayUser=true />
} else if (Model.UsernameQuery != null)
{
    <component type="typeof(UserPagination)" render-mode="Server" param-UsernameQuery=@Model.UsernameQuery  />
}

