@inherits LayoutComponentBase
@inject WebUserService webUserService
@inject NavigationManager nav

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">支配剧场-大图书馆</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Typo="Typo.h6">@context.User.Identity?.Name</MudText>
                <MudIconButton Icon="@Icons.Filled.Logout" Color="Color.Inherit" Edge="Edge.End" Href="MicrosoftIdentity/Account/SignOut"/>
            </Authorized>
            <NotAuthorized>
                <MudText Typo="Typo.h6">请登录</MudText>
                <MudIconButton Icon="@Icons.Filled.Login" Color="Color.Inherit" Edge="Edge.End" Href="MicrosoftIdentity/Account/SignIn"/>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    [CascadingParameter]
    protected Task<AuthenticationState> AuthState { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await webUserService.Init(AuthState.Result.User.Identity?.Name);
        if (webUserService.IsBanned)
        {
            nav.NavigateTo("MicrosoftIdentity/Account/SignOut", forceLoad: true);
        }
    }
}