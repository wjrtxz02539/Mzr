@inject BiliReplyService replyService
@inject BiliUserService userService
@inject WebUserService webUserService
@inject NavigationManager nav
@inject IDialogService dialogService
@attribute [Authorize]

@if (ControllerEnabled)
{
    <MudGrid>
        <MudItem xs="1">
            <MudButton OnClick=SelectUps Variant=@Variant.Filled Color=@Color.Primary>选择UP</MudButton>
        </MudItem>
        <MudItem xs="1">
            <MudButton OnClick=SelectUsers Variant=@Variant.Filled Color=@Color.Secondary>选择用户</MudButton>
        </MudItem>
        <MudItem xs="4">

        </MudItem>
        <MudItem xs="5">
            <MudDatePicker DateChanged=@DateChanged AutoClose="true" Label="查询时间"></MudDatePicker>
        </MudItem>
        <MudItem xs="1">
            <MudButton Variant=@Variant.Filled Color=@Color.Tertiary OnClick=@(() => LoadData())>查询</MudButton>
        </MudItem>
    </MudGrid>
}

<MudChart ChartType=@ChartType ChartSeries=@series XAxisLabels=@xAxisLabels ChartOptions=@ChartOptions Width=@ChartWidth Height=@ChartHeight>
</MudChart>

